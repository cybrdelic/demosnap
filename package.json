{
  "name": "demo-compositor-cli",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "CLI to script a web flow with Playwright, then render an isometric Three.js cinematic compositor (raw + composed + cover).",
  "bin": {
    "demo-compositor": "dist/index.js"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "studio": "tsx src/studio-server.ts",
    "build": "tsc -p . && npm run build:client",
    "build:client": "esbuild src/client/main.tsx --bundle --format=esm --sourcemap --outfile=public/compositor.js",
    "dev:client": "esbuild src/client/main.tsx --bundle --format=esm --sourcemap --watch --outfile=public/compositor.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p . --noEmit",
    "test": "tsx --test \"tests/**/*.test.ts\"",
    "test:duration": "tsx --test \"tests/duration-fix.test.ts\"",
    "test:studio": "tsx --test \"tests/studio.test.ts\"",
    "test:composition": "tsx --test \"tests/composition-duration.test.ts\"",
    "test:all": "npm run test:duration && npm run test:studio && npm run test:composition",
    "e2e:studio": "tsx --test tests/studio-ui-flow.test.ts",
    "e2e": "tsx --test tests/studio-ui-flow.test.ts",
    "repro:duration": "tsx scripts/repro-duration.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "playwright": "^1.47.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.166.0",
    "yaml": "^2.5.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.179.0",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.23.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
