{
  "name": "demo-compositor-cli",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "CLI to script a web flow with Playwright, then render an isometric Three.js cinematic compositor (raw + composed + cover).",
  "bin": {
    "demo-compositor": "dist/index.js"
  },
  "scripts": {
  "start": "tsx src/index.ts",
  "dev": "tsx src/index.ts",
    "build": "tsc -p .",
    "typecheck": "tsc -p . --noEmit"
  },
  "dependencies": {
    "express": "^4.19.2",
    "three": "^0.166.0",
    "yaml": "^2.5.1",
    "yargs": "^17.7.2",
    "playwright": "^1.47.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
  "typescript": "^5.5.4",
  "ts-node": "^10.9.2",
  "tsx": "^4.16.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
